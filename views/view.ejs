<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #0b0202; 
            color: #fff; 
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border: 2px solid #444;
            background-color: #222;     
            color: #fff; 
        }

        th, td {
            padding: 16px;
            text-align: left;
            border-bottom: 2px solid #444;
        }

        th {
            background-color: #333;
            color: #fff;
            font-size: 18px;
        }

        tr:nth-child(even) {
            background-color: #111; 
        }

        tr:hover {
            background-color: #444; 
        }

        .thumbnail {
            max-width: 100px;
            height: auto;
        }

        .action-buttons a {
            color: #ffff;
            text-decoration: none;
            margin-right: 10px;
        }

        .img img {
            width: 50px;
            height: 50px;
            border-radius: 50px;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>No</th>
            <th>Image</th>
            <th>Name</th>
            <th>Email Id</th>
            <th>Phone Number</th>
            <th>Action</th>
        </tr> 
        <% list.map((d, index) => { %> 
            <tr>
                <td><%= index + 1 %></td>
                <td class="img">
                    <img src="<%= d.path %>" alt="<%= d.text %>" class="thumbnail">
                </td>
                <td><%= d.text %></td>
                <td><%= d.email %></td>
                <td><%= d.number %></td>
                <td class="action-buttons">
                    <a href="/editdoc/<%= d.id %>">Edit</a>
                    ||
                    <a href="/deletedoc/<%= d.id %>">Delete</a>
                </td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
